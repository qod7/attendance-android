<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Apptheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/White</item>
    </style>

    <style name="app">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>

    </style>

    <style name="profile_description">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="profile_image_placeholder">
        <item name="android:src">@drawable/user_placeholder</item>
        <item name="android:background">@drawable/image_background</item>
    </style>

    <style name="child_overview">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="child_overview_present" parent="child_overview">
        <item name="android:background">@drawable/child_overview_present_background</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="child_overview_absent" parent="child_overview">
        <item name="android:background">@drawable/child_overview_absent_background</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="child_info">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="child_info_name" parent="child_info">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="child_info_other" parent="child_info">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="Caldroid" parent="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/CaldroidCalendarViewLayout</item>
        <item name="styleCaldroidLeftArrow">@style/CaldroidLeftButton</item>
        <item name="styleCaldroidRightArrow">@style/CaldroidRightButton</item>
        <item name="styleCaldroidMonthName">@style/CaldroidMonthName</item>
        <item name="styleCaldroidNormalCell">@style/CaldroidNormalCell</item>
        <item name="styleCaldroidSquareCell">@style/CaldroidSquareCell</item>
        <item name="styleCaldroidGridView">@style/CaldroidGridView</item>
        <item name="styleCaldroidWeekdayView">@style/CaldroidWeekdayView</item>
    </style>

    <style name="CaldroidCalendarViewLayout">
        <!--<item name="android:background">@color/LightGrey</item>-->
    </style>

    <style name="CaldroidMonthName" parent="CaldroidDefaultMonthName">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CaldroidGridView" parent="CaldroidDefaultGridView">
        <item name="android:background">@color/Gray</item>
    </style>

    <style name="CaldroidWeekdayView" parent="CaldroidDefaultWeekday">
        <item name="android:background">@color/LightGrey</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="CaldroidCell" parent="CaldroidDefaultCell">
        <item name="android:background">@color/White</item>
    </style>

    <style name="CaldroidNormalCell" parent="CaldroidCell">
        <item name="android:padding">5dp</item>
    </style>

    <style name="CaldroidSquareCell" parent="CaldroidCell" />

    <style name="CaldroidLeftButton" parent="CaldroidDefaultLeftButton">
        <item name="android:tint">@color/DarkGray</item>
    </style>

    <style name="CaldroidRightButton" parent="CaldroidDefaultRightButton">
        <item name="android:tint">@color/DarkGray</item>
    </style>

    <style name="QuickActionButtons" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:tint">@color/Gray</item>
        <item name="android:scaleType">centerInside</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
